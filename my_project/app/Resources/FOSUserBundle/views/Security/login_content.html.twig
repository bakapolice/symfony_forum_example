{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    {#<label for="username">{{ 'security.login.username'|trans }}</label>#}

    <div class="form__item form__item-">
        <span class="form__item-label">Имя пользователя</span>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="form__item form__item-">
        <span class="form__item-label">Пароль</span>
        <input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="form__item form__item-remember">
        <span class="form__item-label">Заопмнить меня</span>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    </div>

    <div class="form_action">
        <input  class="form-btn submit_btn-reg" type="submit" id="_submit" name="_submit" value="Войти" />
    </div>
</form>
